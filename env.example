# Environment Variables for Career Guidance Agent

# Database Configuration
DATABASE_URL=sqlite:///./data/career_guidance.db

# Web Scraping Configuration
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/91.0.4472.124 Safari/537.36

# Optional: External API Keys for Enhanced Functionality
# OPENAI_API_KEY=your_openai_api_key_here
# LINKEDIN_API_KEY=your_linkedin_api_key_here
# INDEED_API_KEY=your_indeed_api_key_here

# Application Configuration
ENVIRONMENT=development
DEBUG=True
PORT=8000
HOST=0.0.0.0

# Rate Limiting (requests per minute)
SCRAPING_RATE_LIMIT=60

# Chrome Driver Configuration
CHROME_HEADLESS=True
CHROME_WINDOW_SIZE=1920,1080

# Database Settings
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

